<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="582.0" prefWidth="834.0"
            style="-fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 5; -fx-border-color: rgba(0, 0, 0, 0.3);"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uet.controllers.admin.UserManagementController">
    <BorderPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns:fx="http://javafx.com/fxml">

        <!-- Top: Search Section -->
        <top>
            <HBox alignment="CENTER_LEFT" prefHeight="79.0" prefWidth="800.0" spacing="10"
                  style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
                <Label prefHeight="18.0" prefWidth="84.0" text="Search by:"/>
                <ComboBox fx:id="searchCriteria" prefWidth="150.0" promptText="Select criteria">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="ID"/>
                            <String fx:value="Tên"/>
                            <String fx:value="Lớp"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <TextField fx:id="searchField" prefHeight="26.0" prefWidth="341.0" promptText="Enter keyword ..."/>
                <Button fx:id="searchButton" onAction="#onSearch"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Search"/>
            </HBox>
        </top>

        <!-- Center: Main Content -->
        <center>
            <VBox prefHeight="510.0" prefWidth="800.0" spacing="10" style="-fx-padding: 10;">
                <!-- Input Fields Section -->
                <GridPane alignment="CENTER" hgap="20" maxWidth="800" prefHeight="162.0" prefWidth="766.0" vgap="20">
                    <!-- Cấu hình cột -->
                    <columnConstraints>
                        <ColumnConstraints maxWidth="200.0" minWidth="84.20001068115235" prefWidth="84.20001068115235"/>
                        <ColumnConstraints maxWidth="302.59998931884763" minWidth="200.0" prefWidth="283.2"/>
                        <ColumnConstraints maxWidth="200.0" minWidth="65.59999389648436" prefWidth="81.60000000000002"/>
                        <ColumnConstraints maxWidth="300.0" minWidth="200.0" prefWidth="294.0000061035156"/>
                    </columnConstraints>

                    <!-- Hàng 1 -->
                    <Label alignment="CENTER_RIGHT" text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="userIdField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label alignment="CENTER_RIGHT" text="Name:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <TextField fx:id="userNameField" prefHeight="26.0" prefWidth="301.0" GridPane.columnIndex="3"
                               GridPane.rowIndex="0"/>

                    <!-- Hàng 2 -->
                    <Label alignment="CENTER_RIGHT" text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="userGenderField" prefHeight="26.0" prefWidth="283.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="1">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="FEMALE"/>
                                <String fx:value="MALE"/>
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <Label alignment="CENTER_RIGHT" text="Class:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="userClassField" prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <!-- Hàng 3 -->
                    <Label alignment="CENTER_RIGHT" text="Major:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="userMajorField" prefHeight="26.0" prefWidth="283.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="2">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Công nghệ thông tin"/>
                                <String fx:value="Điện tử viễn thông"/>
                                <String fx:value="Kỹ thuật phần mềm"/>
                                <String fx:value="Khoa học máy tính"/>
                                <String fx:value="Hệ thống thông tin"/>
                                <String fx:value="Tự động hoá"/>
                                <String fx:value="Điện tử hoá"/>
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <Label alignment="CENTER_RIGHT" text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="userPhoneField" prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <!-- Hàng 4 -->
                    <Label alignment="CENTER_RIGHT" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="userEmailField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>

                <!-- Table Section -->
                <TableView fx:id="userTable" prefHeight="295.0" prefWidth="734.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="100.0" text="User ID"/>
                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name"/>
                        <TableColumn fx:id="genderColumn" prefWidth="100.0" text="Gender"/>
                        <TableColumn fx:id="classColumn" prefWidth="100.0" text="Class"/>
                        <TableColumn fx:id="majorColumn" prefWidth="150.0" text="Major"/>
                        <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Phone"/>
                        <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email"/>
                    </columns>
                </TableView>
            </VBox>
        </center>

        <!-- Bottom: Buttons Section -->
        <bottom>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="800.0" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="addButton" onAction="#onAdd" prefHeight="26.0" prefWidth="82.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add user"/>
                <Button fx:id="editButton" onAction="#onEdit" prefHeight="26.0" prefWidth="79.0"
                        style="-fx-background-color: #FFA500; -fx-text-fill: white;" text="Edit User"/>
                <Button fx:id="deleteButton" onAction="#onDelete"
                        style="-fx-background-color: #FF6347; -fx-text-fill: white;" text="Delete User"/>
                <Button fx:id="showDetailButton" onAction="#onShowDetail"
                        style="-fx-background-color: #FF6347; -fx-text-fill: white;" text="Show Detail User"/>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>