<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<DialogPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uet.controllers.user.UserDetailsDialogController"
            style="-fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8;">
    <content>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Tiêu đề -->
            <Label text="Thông tin chi tiết người dùng"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Separator style="-fx-background-color: #cccccc;"/>

            <!-- Nội dung thông tin -->
            <GridPane hgap="20" vgap="15" style="-fx-padding: 10;">
                <Label text="Mã người dùng:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>
                <Label fx:id="userIdLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       wrapText="true" prefWidth="300"/>

                <Label text="Họ và tên:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>
                <Label fx:id="userNameLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       wrapText="true" prefWidth="300"/>

                <Label text="Giới tính:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="2"/>
                <Label fx:id="genderLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       wrapText="true" prefWidth="300"/>

                <Label text="Lớp:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="3"/>
                <Label fx:id="classLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       wrapText="true" prefWidth="300"/>

                <Label text="Ngành học:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="4"/>
                <Label fx:id="majorLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       wrapText="true" prefWidth="300"/>

                <Label text="Số điện thoại:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="5"/>
                <Label fx:id="phoneLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="5"
                       wrapText="true" prefWidth="300"/>

                <Label text="Email:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="6"/>
                <Label fx:id="emailLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1"
                       GridPane.rowIndex="6" wrapText="true" prefWidth="300"/>

                <Label text="Trạng thái mượn trả sách:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <Label fx:id="statusLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="7"
                       wrapText="true" prefWidth="300"/>
            </GridPane>

            <!-- Nút đóng -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="Đóng" onAction="#onClose"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 8; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </content>
</DialogPane>