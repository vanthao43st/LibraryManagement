<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<DialogPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uet.controllers.user.ThesisDetailsDialogController"
            style="-fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8;">
    <content>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Title -->
            <Label text="Thesis Details"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Separator style="-fx-background-color: #cccccc;"/>

            <!-- Content Information -->
            <GridPane hgap="20" vgap="15" style="-fx-padding: 10;">
                <Label text="Mã luận văn:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>
                <Label fx:id="codeLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       wrapText="true" prefWidth="300"/>

                <Label text="Tiêu đề:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>
                <Label fx:id="titleLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       wrapText="true" prefWidth="300"/>

                <Label text="Mô tả:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="2"/>
                <Label fx:id="descriptionLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1"
                       GridPane.rowIndex="2" wrapText="true" prefWidth="300"/>

                <Label text="Số lượng:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="3"/>
                <Label fx:id="quantityLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1"
                       GridPane.rowIndex="3" wrapText="true" prefWidth="300"/>

                <Label text="Ngành học:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="4"/>
                <Label fx:id="majorLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       wrapText="true" prefWidth="300"/>

                <Label text="Tác giả:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="5"/>
                <Label fx:id="authorLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="5"
                       wrapText="true" prefWidth="300"/>

                <Label text="Người giám sát:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="6"/>
                <Label fx:id="supervisorLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1"
                       GridPane.rowIndex="6"
                       wrapText="true" prefWidth="300"/>

                <Label text="Trường:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="7"/>
                <Label fx:id="universityLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1"
                       GridPane.rowIndex="7"
                       wrapText="true" prefWidth="300"/>

                <Label text="Bằng:" style="-fx-text-fill: #000;-fx-font-weight: bold;" GridPane.columnIndex="0"
                       GridPane.rowIndex="8"/>
                <Label fx:id="degreeLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1" GridPane.rowIndex="8"
                       wrapText="true" prefWidth="300"/>

                <Label text="Năm nộp:" style="-fx-text-fill: #000;-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                <Label fx:id="submissionYearLabel" style="-fx-text-fill: #000;" GridPane.columnIndex="1"
                       GridPane.rowIndex="9"
                       wrapText="true" prefWidth="300"/>
            </GridPane>

            <!-- Close Button -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="Close" onAction="#onClose"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 8; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </content>
</DialogPane>
